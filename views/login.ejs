<%- include('partials/header', { title: 'Sign In', user: null }) %>
<link rel="stylesheet" href="/css/styles.css">

<div class="container" style="max-width: 400px; margin: auto; padding: 20px;">
  <h1 class="mb-4 text-center">Sign In</h1>

  <% if (error) { %>
    <p style="color: red; background: #ffe6e6; padding: 10px; border-radius: 5px; text-align: center;">
      <%= error %>
    </p>
  <% } %>

  <form action="/auth/login" method="POST" class="d-grid gap-3 text-start">
    <div>
      <label for="email" class="form-label">Email:</label>
      <input type="email" name="email" id="email" required class="form-control" 
       placeholder="Enter your email" value="<%= email ? email : '' %>">

    </div>
    <div>
      <label for="password" class="form-label">Password:</label>
      <input type="password" name="password" id="password" required class="form-control" placeholder="Enter your password">
    </div>

    <% if (showOTP) { %>
      <div>
        <label for="otp" class="form-label">Enter OTP:</label>
        <input type="text" name="otp" id="otp" required class="form-control" placeholder="Enter the code from Google Authenticator">
      </div>
    <% } %>

    <button type="submit" class="btn btn-primary w-100">Sign In</button>
  </form>

  <p class="mt-3 text-center">Don't have an account? <a href="/auth/register">Sign up</a></p>
</div>

<%- include('partials/footer') %>
